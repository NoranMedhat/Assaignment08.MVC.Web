@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee </a>

 <div class="row justify-content-center align-items-center mt-5 ">
     <form class="row col-8 offset-2" asp-action="Index">
         <div class="col-8">
            <input type="text" class="form-control" name="SearchInp" placeholder="Search By Name Or Email Or PhoneNumber" />

         </div>
        <div class="col-4">
            <input type="submit" class="btn-success" value="search" />

        </div>
         </form>

 </div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                
                <th>@Html.DisplayNameFor(N => N.Name)</th>
                <th>@Html.DisplayNameFor(N => N.Image)</th>

                <th>@Html.DisplayNameFor(N => N.Age)</th>
                <th>@Html.DisplayNameFor(N => N.Address)</th>
                <th>@Html.DisplayNameFor(N => N.Salary)</th>
                <th>@Html.DisplayNameFor(N => N.Email)</th>
                <th>@Html.DisplayNameFor(N => N.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(N => N.HiringDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Employee in Model)
            {
               <tr>
                    <td>@Employee.Name</td>
                    <td>
                        <img src="/Files/Images/@Employee.ImgUrl" height="40" width="40" alt="Employee" />
                        </td>

                    <td>@Employee.Age</td>
                    <td>@Employee.Address</td>
                    <th>@Html.DisplayFor(N => Employee.Salary)</th>
                    <th>@Html.DisplayFor(N => Employee.Email)</th>
                    <td>@Employee.PhoneNumber</td>
                    <td>@Employee.HiringDate</td>
                    <partial name="_ActionButtonsPartialView" model="@Employee.Id.ToString()" />
               </tr>

            }
        </tbody>

    </table>


}
else
{
    <div class="mt-5 alert alert-danger">
        <h3>
            There is no Employee
        </h3>
    </div>
}