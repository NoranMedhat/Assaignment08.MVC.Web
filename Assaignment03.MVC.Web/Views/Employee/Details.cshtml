@model EmployeeDto
@{
    ViewData["Title"] = "Details";
}
<h1> Employee Detalis </h1>
<form asp-action="Create" enctype="multipart/form-data">
    <div class="Form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" readonly />

    </div>

    <div class="Form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" readonly />

    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" readonly />

    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="number" asp-for="Salary" class="form-control" readonly />

    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" readonly />

    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input type="tel" asp-for="PhoneNumber" class="form-control" readonly />

    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input type="date" asp-for="HiringDate" class="form-control" readonly />
    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="Department"></label>
        <input type="text" asp-for="Department.Id" class="form-control" readonly />

       
    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="Image">Image</label>
        <br />
        <img src="@Model.Image" alt="Employee Image" class="img-fluid" />
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>

</form>
