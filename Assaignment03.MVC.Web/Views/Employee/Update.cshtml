@model EmployeeDto
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit Employee  </h1>


@{
    var departments = new SelectList(ViewBag.Departments, nameof(Department.Id), nameof(Department.Name));
}


<form asp-action="Update"enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="Form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>

    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="number" asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input type="tel" asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input type="date" asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>

    <div class="Form-group">
        <label class="col-form-label" asp-for="Department"></label>
        <select class="form-control" asp-items="@departments" asp-for="DepartmentId">
            <option value="@null">
                --Select Department--
            </option>
        </select>
    </div>
    <div class="Form-group">
        <label class="col-form-label" asp-for="Image">Image</label>
        <br />
        <input type="file" asp-for="Image" class="form-control-file" />

    </div>



    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>

</form>