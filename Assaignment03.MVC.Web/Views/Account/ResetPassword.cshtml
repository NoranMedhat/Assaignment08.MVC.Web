@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "_AuthLayout";
}

<h1>ResetPassword</h1>
<form asp-action="ResetPassword" method="post">
	<input type="hidden" asp-for="Email"  />
	<input type="hidden" asp-for="Token"   />

	<input type="password" asp-for="Password" placeholder="Password" class="form-control" />
	<span asp-validation-for="Password">
	</span>
	<br />
	<input type="password" asp-for="ConfirmPassword" placeholder="ConfirmPassword" class="form-control" />
	<span asp-validation-for="ConfirmPassword">
	</span>
	<br />
	<input type="submit" value="Change Password" class="btn btn-primary"/>
</form>

